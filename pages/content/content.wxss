/* pages/content/content.wxss */
.content {
  height: 100vh;
}

.title {
  text-align:center;
  margin-left: 10rpx;
  margin-right: 10rpx;
  color: #576B95;
  font-size: 16pt;
}

.metadata {
  display: flex;
  text-align:center;
  align-items:center;
  justify-content: center;
  font-size: 9pt;
  color: #888888;
}

.metadata .creater {
  margin-right: 10rpx;
}

.metadata .datetime {
  margin-right: 10rpx;
}

.metadata .tags {

}

.contents {

}

.section {
  color: #576B95;
  border-left: 10rpx solid #576B95;
  padding: 0 0 0 10rpx;
  margin: 20rpx 0 0 10rpx;
}

.section_level_1 {
  font-size: 14pt;
}

.section_level_2 {
  font-size: 12pt;
}

.section_level_3 {
  font-size: 11pt;  
}

.block {
  font-size: 10pt;
  color: #888888;
  margin: 20rpx 10rpx 0 10rpx;
}

.block_txt {
  display: inline;
}

.block_underline {
  color: #576B95;
  font-weight: bold;
  margin-left: 4rpx;
  margin-right: 4rpx;
  display: inline;
}

.block_ref {
  display: inline;
  border-bottom: 2rpx solid #576B95;
  margin-left: 4rpx;
  margin-right: 4rpx;
}
